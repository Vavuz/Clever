<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/total_scroll_view"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/______"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="40dp"
        android:elevation="6dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:background="@color/total_back">

            <TextView
                android:id="@+id/total_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total type"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="@color/cells_titles_color"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:textColor="@color/cells_h2_color"
                android:textSize="20sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>