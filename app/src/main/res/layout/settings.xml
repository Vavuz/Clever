<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/coffee"
        android:layout_width="179dp"
        android:layout_height="176dp"
        android:layout_marginTop="330dp"
        android:src="@drawable/coffee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switchNight" />

    <Button
        android:id="@+id/backSettings"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="61dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_back"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchNight"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="510dp"
        android:gravity="center"
        android:text="@string/dark_mode"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchSound"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="440dp"
        android:gravity="center"
        android:text="@string/sound_mode"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/donation_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/donationText"
        app:layout_constraintBottom_toTopOf="@id/coffee"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:textColor="@color/cells_titles_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>